<h4 class="page-title">Video Ekle</h4>

<div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="header-title">Form </h4>
                    <p class="text-muted font-13">
                        
                    </p>

                    <form action="/videoekle" method="post" id="upload" enctype="multipart/form-data">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                    <div class="progress mb-0">
                                            <div class="progress-bar" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">0%</div>
                                        </div>
                                <label for="inputEmail4" class="col-form-label">Resim Yada Video</label>
                                <input type="file" name="file" id="example-fileinput" class="file form-control-file">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputPassword4" class="col-form-label">Player Başlık</label>
                                <input type="text" class="form-control title" name="title" id="inputPassword4" placeholder="Başlık">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputAddress" class="col-form-label">Sıra</label>
                            <input type="text" class="form-control sira" name="sira" id="inputAddress" placeholder="1234 ">
                        </div>

                        <div class="form-group">
                            <label for="inputAddress2" class="col-form-label">Açıklama</label>
                            <input type="text" class="form-control description" name="description" id="inputAddress2" placeholder="Açıklama ekle">
                        </div>

                        
                   
                       

                        <button  type="submit" class="btn btn-primary uploadButton waves-effect waves-light">Video Yükle</button>

                    </form>

                </div> <!-- end card-body -->
            </div> <!-- end card-->
        </div> <!-- end col -->
    </div>
    <script>
    
        
  
    
    </script>


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <h4 class="header-title">Player Listeniz</h4>
                <p class="text-muted font-13 mb-4">
                   
                </p>

                <table id="datatable-buttons" class="table table-striped dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>Player TİPİ</th>
                            <th>Adı</th>
                            <th>Sıra</th>
                            <th>Düzenle</th>
                            
                        </tr>
                    </thead>
                
                
                    <tbody>
                        <% video.map(function(vdata){ %>
                            <tr>
                                    <td>
                                            <%if(vdata.type=='image/jpeg'){ %>
                                               <img width="40" src="/upload/<%=vdata.file%>">
                                            <% } %>
                                            <%if(vdata.type=='video/mp4'){ %>
                                                <img width="40" src="/upload/<%=vdata.file%>">
                                             <% } %>
                                       </td>
                                    <td><%=vdata.title%></td>
                                    <td><%=vdata.sira%></td>
                                    <td><button id="<%=vdata._id%>" type="button" class="btn btn-outline-danger btn-rounded waves-effect videoSil waves-light">Sil</button> </td>
                                  
                                </tr>
                        <% })%>

                        
                        
                    </tbody>
                </table>
                
            </div> <!-- end card body-->
        </div> <!-- end card -->
    </div><!-- end col-->
</div>